 
#include <iostream>
using namespace std;
int main()
{
int start ,end ,counter ;
cin>> start >> end; 
counter = 0;
for (int i =0 ;i<=start ; i++)
{
    for (int l= 0;l<=start;l++){
        if (end -i-l >= 0&&end -i-l<=start ){
            counter ++;
        }
    }
 
}
    cout<<counter++;
 
    return 0;
}
